    "GITHUB_CLIENT_SECRET": "your_github_client_secret",
    "GOOGLE_CLIENT_ID": "your_google_client_id",
    "GOOGLE_CLIENT_SECRET": "your_google_client_secret",
    "JWT_SECRET": "your_super_secret_jwt_key_here_make_it_long_and_random",
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "instructions": {
    "aws_setup": {
      "AWS_ACCESS_KEY_ID": "Get this from AWS IAM Console - Create a user with S3 and DynamoDB permissions",
      "AWS_SECRET_ACCESS_KEY": "Get this from AWS IAM Console - Secret key for the user",
      "AWS_REGION": "Your AWS region (us-east-1 is default)",
      "AWS_S3_BUCKET": "Your S3 bucket name for file uploads",
      "AWS_DYNAMODB_TABLE": "Your DynamoDB table name for user data"
    },
    "oauth_setup": {
      "github": {
        "steps": [
          "Go to https://github.com/settings/developers",
          "Click 'New OAuth App'",
          "Application name: Qalam",
          "Homepage URL: https://qalam.onrender.com",
          "Authorization callback URL: https://qalam.onrender.com/auth/github/callback",
          "Register and copy Client ID and Client Secret"
        ]
      },
      "google": {
        "steps": [
          "Go to https://console.cloud.google.com/",
          "Create a new project or select existing",
          "Enable Google+ API",
          "Go to Credentials → Create Credentials → OAuth 2.0 Client IDs",
          "Set up OAuth consent screen",
          "Add authorized redirect URIs: https://qalam.onrender.com/auth/google/callback",
          "Copy Client ID and Client Secret"
        ]
      }
    },
    "jwt_secret": {
      "description": "Generate a strong random string for JWT token signing",
      "example": "Use a tool like https://generate-secret.vercel.app/32 or run: node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\""
    },
    "render_deployment": {
      "steps": [
        "Go to your Render dashboard",
        "Select your Qalam backend service",
        "Go to Environment tab",
        "Add each variable from the environment_variables object above",
        "Replace placeholder values with real credentials",
        "Redeploy the service"
      ]
    }
  },
